{
  "devDependencies": {
    "@inabagumi/eslint-config-react": "^5.3.0",
    "@inabagumi/prettier-config": "^1.1.2",
    "@types/react": "^16.9.38",
    "eslint": "^7.3.1",
    "prettier": "^2.0.5",
    "typescript": "^3.9.5"
  },
  "engines": {
    "node": "12.x"
  },
  "eslintConfig": {
    "extends": [
      "@inabagumi/react"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "react/prop-types": "off"
    }
  },
  "private": true,
  "scripts": {
    "format": "prettier --ignore-path .gitignore --write '**/*.{js,jsx}'",
    "format-check": "prettier -c --ignore-path .gitignore '**/*.{js,jsx}'",
    "lint": "eslint --ext .js,.jsx .",
    "now-build": "yarn workspace @manael/website build"
  },
  "workspaces": [
    "website"
  ]
}
