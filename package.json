{
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@inabagumi/eslint-config-react": "^9.0.1",
    "@inabagumi/prettier-config": "^1.1.3",
    "@types/react": "^17.0.9",
    "eslint": "^7.28.0",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "eslintConfig": {
    "extends": [
      "@inabagumi/react"
    ],
    "root": true
  },
  "prettier": "@inabagumi/prettier-config",
  "private": true,
  "scripts": {
    "build": "yarn workspace @manael/website build",
    "format": "prettier --write './**/*.{json,yml}'",
    "format-check": "prettier -c './**/*.{json,yml}'",
    "lint": "eslint .",
    "prepare": "is-ci || husky install"
  },
  "workspaces": [
    "website"
  ]
}
