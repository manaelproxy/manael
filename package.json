{
  "devDependencies": {
    "@commitlint/cli": "^16.0.2",
    "@commitlint/config-conventional": "^16.0.0",
    "@inabagumi/eslint-config-react": "^9.0.1",
    "@inabagumi/prettier-config": "^2.0.0",
    "@types/react": "^17.0.38",
    "eslint": "^8.7.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.1",
    "lint-staged": "^12.2.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "eslintConfig": {
    "extends": [
      "@inabagumi/react"
    ],
    "root": true
  },
  "prettier": "@inabagumi/prettier-config",
  "private": true,
  "scripts": {
    "build": "yarn workspace @manael/website build",
    "format": "prettier --write './**/*.{json,yml}'",
    "format-check": "prettier -c './**/*.{json,yml}'",
    "lint": "eslint .",
    "prepare": "is-ci || husky install"
  },
  "workspaces": [
    "website"
  ]
}
